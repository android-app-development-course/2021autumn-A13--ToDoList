<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg">

    <fragment
        android:id="@+id/topViewFragment00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.android.librarybase.topview.TopViewFragment"
        android:background="@color/main_bg"
        />
    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/settings_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_leftImageResource="@drawable/add_plan_jiantou_black"
        app:tb_leftText="返回"
        app:tb_titleText="设置"
        app:tb_titleTextSize="17sp"
        app:tb_useThemeColor="false"
        app:tb_sideTextColor="@color/black"
        app:tb_titleTextColor="@color/black"
        android:background="@color/main_bar_color"/>
    <!--    <FrameLayout-->
    <!--        android:id="@+id/settings"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content" />-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg"
        android:layout_below="@+id/main_top_bar"/>
    <RelativeLayout
        android:id="@+id/beifen_plans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/personal_item_vertical"
        android:paddingHorizontal="@dimen/edge_lr"
        android:background="@drawable/personal_item_selector"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:text="备份所有计划和标签"
            android:textColor="@color/black"
            android:textSize="@dimen/middle_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/middle_size"
            android:layout_centerInParent="true"
            android:textColor="@color/main_deep_grad"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/jiantou_right00"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/youjiantou_left"
            android:background="@drawable/jiantou_right_grad"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_grad"
        android:layout_marginLeft="@dimen/edge_lr"/>
    <RelativeLayout
        android:id="@+id/get_beifen_plans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/personal_item_vertical"
        android:paddingHorizontal="@dimen/edge_lr"
        android:background="@drawable/personal_item_selector"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取所有在云端的计划和标签"
            android:textSize="@dimen/middle_size"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/middle_size"
            android:layout_centerInParent="true"
            android:textColor="@color/main_deep_grad"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/jiantou_right01"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/youjiantou_left"
            android:background="@drawable/jiantou_right_grad"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg"
        android:layout_below="@+id/main_top_bar"/>
    <RelativeLayout
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/personal_item_vertical"
        android:paddingHorizontal="@dimen/edge_lr"
        android:background="@drawable/personal_item_selector"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="@dimen/middle_size"
            android:layout_centerInParent="true"
            android:textColor="@color/black"/>


    </RelativeLayout>
<!--    <Button-->
<!--        android:id="@+id/btn_logout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginHorizontal="50dp"-->
<!--        android:background="@drawable/btn_selector"-->
<!--        android:layout_gravity="bottom"-->
<!--        android:text="退出登录" />-->

</LinearLayout>