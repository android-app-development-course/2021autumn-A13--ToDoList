        <!--            android:layout_marginBottom="@dimen/register_edit_margin_tb"-->
        <!--            android:layout_weight="1"-->
        <!--            android:ems="10"-->
        <!--            android:inputType="phone" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_edit_margin_lr"
            android:layout_marginTop="@dimen/login_edit_margin_tb"
            android:layout_marginRight="@dimen/login_edit_margin_lr"
            android:layout_marginBottom="@dimen/login_edit_margin_tb"
            android:layout_weight="1"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            app:hintTextColor="@color/main_green">

            <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                android:id="@+id/edit_register_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="输入账号"
                android:inputType="phone"
                android:layoutDirection="locale"
                android:textAlignment="viewStart"
                android:textSize="@dimen/big_size"
                app:met_iconLeft="@drawable/login_username"
                app:met_validateOnFocusLost="true"
                android:theme="@style/LoginTheme"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_edit_margin_lr"
            android:layout_marginTop="@dimen/login_edit_margin_tb"
            android:layout_marginRight="@dimen/login_edit_margin_lr"
            android:layout_marginBottom="@dimen/login_edit_margin_tb"
            android:layout_weight="1"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            app:hintTextColor="@color/main_green">

            <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                android:id="@+id/edit_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:layoutDirection="locale"
                android:textAlignment="viewStart"
                android:textSize="@dimen/big_size"
                app:met_iconLeft="@drawable/login_password"
                app:met_passWordButton="true"
                app:met_validateOnFocusLost="true"
                android:theme="@style/LoginTheme"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_edit_margin_lr"
            android:layout_marginTop="@dimen/login_edit_margin_tb"
            android:layout_marginRight="@dimen/login_edit_margin_lr"
            android:layout_marginBottom="@dimen/login_edit_margin_tb"
            android:layout_weight="1"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            app:hintTextColor="@color/main_green">

            <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                android:id="@+id/edit_register_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:layoutDirection="locale"
                android:textAlignment="viewStart"
                android:textSize="@dimen/big_size"
                app:met_iconLeft="@drawable/login_password"
                app:met_passWordButton="true"
                app:met_validateOnFocusLost="true"
                android:theme="@style/LoginTheme"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--        <EditText-->
        <!--            android:id="@+id/edit_get_back_password"-->
        <!--            android:layout_width="match_parent"-->
