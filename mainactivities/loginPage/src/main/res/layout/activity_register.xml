        <!--            android:ems="10"-->
        <!--            android:inputType="textPassword" />-->

        <!--        <EditText-->
        <!--            android:id="@+id/edit_get_back_confirm"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_marginLeft="@dimen/register_edit_margin_lr"-->
        <!--            android:layout_marginTop="@dimen/register_edit_margin_tb"-->
        <!--            android:layout_marginRight="@dimen/register_edit_margin_lr"-->
        <!--            android:layout_marginBottom="@dimen/register_edit_margin_tb"-->
        <!--            android:layout_weight="1"-->
        <!--            android:ems="10"-->
        <!--            android:inputType="textPassword" />-->
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        app:layout_constraintWidth_percent="0.3"
        android:text="注册"
        android:textSize="@dimen/big_size"
        android:textColor="@color/white"
        android:background="@drawable/btn_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="注册"
        android:textSize="@dimen/big_big_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topViewFragment" />
</androidx.constraintlayout.widget.ConstraintLayout>